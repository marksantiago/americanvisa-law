{
  "name": "americanvisa-law",
  "version": "1.0.0",
  "description": "files for the americanvisa.law website",
  "main": "index.js",
  "scripts": {
    "lint:scss": "stylelint \"src/**/*.html\" \"src/scss/**/*.scss\" --syntax scss || true",
    "compile:scss": "mkdirp src/css -p && node-sass --output-style=expanded --source-map=true src/scss/main.scss src/css/main.comp.css",
    "prefix:css": "postcss src/css/main.comp.css --use=autoprefixer --map=false -o src/css/main.prefix.css",
    "minify:css": "mkdirp dist/css -p && cleancss --level=1 --source-map --source-map-inline-sources -o dist/css/main.min.css src/css/main.prefix.css",
    "build:css": "run-s lint:scss compile:scss prefix:css minify:css",
    "lint:js": "eslint src/js || true",
    "uglify:js": "mkdirp dist/js -p && uglifyjs src/js/*.js -m -o dist/js/main.js && uglifyjs src/js/*.js -m -c -o dist/js/main.min.js",
    "build:js": "run-s lint:js uglify:js",
    "imagemin:img": "imagemin src/img/* --out-dir=dist/img",
    "imagemin:docroot": "imagemin src/* --out-dir=dist && echo \"All images in the web root directory are minified.\"",
    "svgo:img": "svgo -f src/img/SVG --disable=removeViewBox -o dist/img/SVG",
    "svg-sprite:img": "svgstore -o dist/img/sprite.svg dist/img/SVG/*.svg",
    "build:img": "run-s imagemin:img imagemin:docroot svgo:img svg-sprite:img",
    "build:html": "html-minifier --file-ext html --input-dir src --output-dir dist --case-sensitive --keep-closing-slash --collapse-whitespace --collapse-inline-tag-whitespace --collapse-boolean-attributes --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-style-link-type-attributes --remove-tag-whitespace --use-short-doctype --minify-css true --minify-js true --minify-urls true && echo \"html files minified\"",
    "watch:css": "onchange \"src/scss/**/*.scss\" -- run-s build:css",
    "watch:js": "onchange \"src/js/*.js\" -- run-s build:js",
    "watch:img": "onchange \"src/img/*\" -- run-s build:img",
    "watch:html": "onchange src/**/*.html -- run-s build:html",
    "serve": "browser-sync start --server dist --files dist",
    "build": "run-s build:*",
    "watch": "run-p serve watch:*",
    "clean": "rimraf dist/{css/*,js/*,img/*} && rimraf src/css/*",
    "prestart": "rimraf dist",
    "start": "ncp src dist && cd dist && rimraf img js scss",
    "poststart": "run-s build watch",
    "postinstall": "run-s clean start"
  },
  "browserslist": [
    "last 10 versions"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marksantiago/americanvisa-law.git"
  },
  "author": "Mark Santiago <marksantiago2011@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marksantiago/americanvisa-law/issues"
  },
  "homepage": "https://github.com/marksantiago/americanvisa-law#readme",
  "devDependencies": {
    "autoprefixer": "^9.6.0",
    "browser-sync": "^2.26.7",
    "clean-css-cli": "^4.3.0",
    "eslint": "^6.0.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "imagemin-cli": "^5.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.0.0",
    "postcss-cli": "^6.1.2",
    "rimraf": "^2.6.3",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "svgo": "^1.2.2",
    "svgstore-cli": "^1.3.1",
    "uglify-js": "^3.6.0",
    "html-minifier": "^4.0.0",
    "ncp": "^2.0.0"
  }
}
